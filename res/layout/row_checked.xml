<?xml version="1.0" encoding="utf-8"?>
<com.example.listselect.CheckableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="40dp"
	android:orientation="horizontal" 
	android:background="@drawable/row_bg_checked"
	>
	<LinearLayout
	    android:layout_width="0dp"
	    android:layout_height="40dp"
	    android:layout_weight="1"
	    android:orientation="horizontal" >
	
	    <TextView
	        android:id="@android:id/text1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:layout_gravity="center_vertical"
			android:singleLine="true"		    
	        >
	    </TextView>
	       
	    <TextView
	        android:id="@+id/computerStatus1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:layout_weight="0"
		    android:layout_gravity="center_vertical">

	    </TextView>
	 
	</LinearLayout>
<!-- V zgornji TextView bi bilo potrebno dodati Å¡e nekaj v smislu 		android:textAppearance="@style/text_title" -->

	<View
		android:layout_width="2dp"
		android:layout_height="match_parent"
		tools:ignore="PxUsage" />

	<ImageView
		android:id="@+id/select_computer_arrow"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:contentDescription="desc"
		android:gravity="center_vertical"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:src="@drawable/icon_arrow" />

</com.example.listselect.CheckableLayout>